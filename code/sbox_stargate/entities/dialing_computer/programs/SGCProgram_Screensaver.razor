@using System;
@using Sandbox;
@using Sandbox.UI;
@using System.Threading.Tasks;
@using System.Text;

@inherits SGCProgram;

<style>

	.canvas {
		background-color: transparent;
		width: 100%;
		height: 100%;
		opacity: 1;
	}

	.black_bg {
		background-color: black;
		width: 100%;
		height: 65%;
		margin: auto;
	}

	.frame_outer {
		border-width: 0.5%;
		border-color: @SGCComputer.ColorSgBlue.Rgb;

		position: absolute;
		top: 19.15%;
		bottom: 19.15%;
		left: 1.65%;
		right: 1.65%;
		margin: auto;
	}

</style>

<root>
	<div class="canvas">
		<div class="black_bg"></div>
	</div>

	<div class="frame_outer"></div>
</root>

@code
{

	protected override int BuildHash()
	{
		return HashCode.Combine(Time.Now);
	}

}
